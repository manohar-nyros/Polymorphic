<h1>Articles</h1>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Number of Comments</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% if @articles.count == 0 %>
      <tr>
        <td colspan="3">
          No articles found.
        </td>
      </tr>
    <% else %>
      <% @articles.each do |article| %>
        <tr>
          <td><%= link_to "#{article.name}", article %></td>
          <td><%= article.comments.count %></td>
          <td><%= link_to "Edit", edit_article_path(article), class: "btn btn-default" %></td>
          <td><%= link_to "Destroy", article, class: 'btn btn-default', method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<div class="well">
<%= link_to "New Article", new_article_path, class: "btn btn-primary" %>
</div>